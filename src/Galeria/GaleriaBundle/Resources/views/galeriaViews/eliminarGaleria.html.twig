<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        

        <title>Galerías</title>

    </head>
    <body bgcolor="#FFFFCC">
        
    <form action="{{ path('baja_galeria') }}" method="POST" {{ form_enctype(form) }}>


        
        <select name="gale" id="gale" >
      
             {% for galeria in galerias %}
                <option value="{{galeria.id}}">{{galeria.nombre}}</option>

             {% endfor %}
                
        </select>
 
         {{ form_errors(form) }}
        
        
	<br><br>
	<input type="submit" value="Eliminar galería">
  
        <br><br>

         <a href="{{ path('elimina_fotos_galeria') }}">Eliminar fotos de la galería</a>
         <br><br>
         
         <a href="{{ path('galeria_sitio') }}">Volver</a>
       
           {{ form_rest(form) }}
         
    </form>     
    </body>
</html>


